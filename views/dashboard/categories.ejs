<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/dashboard.css" />
    <title>KickPulse Dashboard</title>
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="text-center">Admin Dashboard</h1>
      <h4 class="text-center">
        Welcome to your control panel<br />
        Control your store with ease.
      </h4>
    </div>
    <div class="d-flex align-items-center justify-content-center">
      <div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <a class="navbar-brand" href="#">KICK-PULSE</a>
          <button
            class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/dashboard/products">Products</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/dashboard/suppliers">Suppliers</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/dashboard/users">Users</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/dashboard/orders">Orders</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/dashboard/brands">Brands</a>
              </li>
              <li class="nav-item active">
                <a class="nav-link" href="/dashboard/categories">Categories</a>
              </li>
            </ul>
          </div>
        </nav>
      </div>
    </div>

    <main class="main-content container mt-5 mb-5">
      <h6 class="text-center mb-3">
        WARNING: Deleting a category will delete all of its products
      </h6>

      <div class="row">
        <div
          class="list-group col-lg-2 col-sm-3 col-12 mb-4"
          id="list-tab"
          role="tablist"
        >
          <a
            class="list-group-item list-group-item-action active all-categories-tab"
            id="list-home-list"
            data-toggle="list"
            href="#all_categories"
            role="tab"
            aria-controls="home"
            >All Categories</a
          >
          <a
            class="list-group-item list-group-item-action add-category-tab"
            id="list-profile-list"
            data-toggle="list"
            href="#add_categories"
            role="tab"
            aria-controls="profile"
            >Add Category</a
          >
        </div>
        <div class="col-lg-8 col-sm-9 col-12 categories d-flex flex-wrap">
          <% if (categories.length == 0) { %>
          <h4>You don't have any categories..</h4>
          <% } categories.forEach(category => { %>
          <div class="col-md-4 col-sm-6 col-12 mb-4">
            <div
              class="card position-relative"
              data-category-id="<%= category._id %>"
            >
              <button
                type="button"
                class="btn btn-outline-danger delete-category"
              >
                X
              </button>
              <div class="card-body">
                <h5 class="card-title"><%= category.name %></h5>
                <p class="card-text">Category ID: <%= category._id %></p>
                <p class="card-text">
                  <strong>Sub Categories:</strong>
                  <% const subCategories = [];
                  category.subcategories.forEach(subcat => {
                  subCategories.push(subcat.name); }); %> <%=
                  subCategories.join(', '); %>
                </p>
              </div>
            </div>
          </div>
          <% }); %>
        </div>

        <div class="col-lg-6 col-sm-8 col-12 offset-lg-1 add-category hidden">
          <h1 class="text-center">Add Category</h1>
          <form
            class="add-category-form"
            action="/api/categories"
            method="POST"
          >
            <div
              class="form-row d-flex align-items-center justify-content-center"
            >
              <div class="form-group col-md-6">
                <label for="name">Category Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  value="test1"
                  required
                />
              </div>
            </div>
            <div
              class="form-row d-flex justify-content-center subcategory-input-container hidden"
            >
              <div class="form-group col-12 col-md-6 d-flex align-items-center">
                <button
                  type="button"
                  class="btn btn-outline-danger delete-subcategory mr-3"
                >
                  X
                </button>
                <div>
                  <label for="subcategory-name" class=""
                    >Sub Category Name</label
                  >
                  <input
                    type="text"
                    class="form-control subcategory-name"
                    name="subcategory-name"
                    value="test1"
                    required
                  />
                </div>
              </div>
            </div>
            <!-- Subcategory frame -->
            <!-- <div class="form-row d-flex justify-content-center subcategory-input-container">
              <div class="form-group col-12 col-md-6 d-flex align-items-center">
                <button
                  type="button"
                  class="btn btn-outline-danger delete-subcategory mr-3"
                >
                  X
                </button>
                <div>
                  <label for="subcategory-name" class=""
                    >Sub Category Name</label
                  >
                  <input
                    type="text"
                    class="form-control subcategory-name"
                    name="subcategory-name"
                    value="test1"
                    required
                  />
                </div>
              </div>
            </div> -->

            <div
              class="d-flex align-items-center justify-content-center form-btns-container"
            >
              <button
                type="button"
                class="btn btn-outline-primary mx-auto add-subcategory-btn"
              >
                Add Sub Category
              </button>
              <button type="submit" class="btn btn-primary mx-auto">
                Add & Save Category
              </button>
            </div>
          </form>
          <div class="mt-4 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-center hidden" role="status">
              <span class="sr-only">Loading...</span>
            </div>
          </div>
          <div
            class="feedback-message container text-center mt-4 hidden fs-2"
          ></div>
        </div>
      </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/js/dashboard/categories.js"></script>
  </body>
</html>
