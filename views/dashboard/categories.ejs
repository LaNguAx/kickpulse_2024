<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" />
  <link rel="stylesheet" href="/css/dashboard.css" />
  <title>KickPulse Dashboard</title>
</head>

<body>
  <div class="container mt-5">
    <h1 class="text-center">Admin Dashboard</h1>
    <h4 class="text-center">
      Welcome to your control panel<br />
      Control your store with ease.
    </h4>
  </div>
  <div class="d-flex align-items-center justify-content-center">
    <div>
      <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">KICK-PULSE</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link " aria-current="page" href="/dashboard/products">Products</a>
              </li>
              <li class="nav-item">
                <a class="nav-link " href="/dashboard/suppliers">Suppliers</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/dashboard/users">Users</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/dashboard/orders">Orders</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/dashboard/brands">Brands</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/dashboard/categories">Categories</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
  </div>

  <main class="container mt-5 mb-5">
    <div class="row">
      <div class="list-group col-lg-2 col-sm-3 tabs-container">
        <a class="list-group-item list-group-item-action active tab all-categories-tab" id="list-home-list"
          data-toggle="list" href="#all_categories" role="tab" aria-controls="home">All Categories</a>
        <a class="list-group-item list-group-item-action tab add-category-tab" id="list-profile-list" data-toggle="list"
          href="#add_categories" role="tab" aria-controls="profile">Add Category</a>

      </div>
      <div class="col-8 main-content">
        <div class="row categories">
          <% if(categories.length == 0) { %>
          <h4>You don't have any categories..</h4>
          <% } else { categories.forEach(category => { %>

          <div class="col-md-3 col-sm-6 col-12 mb-4">
            <div class="card position-relative" data-category-id="<%= category._id %>">
              <button type="button" class="btn btn-outline-danger delete-category">
                X
              </button>
              <div class="card-body">
                <h5 class="card-title"><%= category.name %></h5>
                <p class="card-text">Category ID: <%= category._id %></p>
                <p class="card-text">
                  <strong>Sub Categories:</strong>
                  <% const subCategories = [];
                  category.subcategories.forEach(subcat => {
                  subCategories.push(subcat.name); }); %> <%=
                  subCategories.join(', '); %>
                </p>
              </div>
              <button type="button" class="btn btn-outline-secondary">
                <i class="bi bi-pencil-square"></i>
                <span class="visually-hidden">Edit Category</span>
              </button>
            </div>
          </div>

          <% })
             } %>


        </div>


        <div class="col add-category hidden">
          <h1 class="text-center mb-4">Add Category</h1>

          <form class="row add-category-form align-items-center flex-column" action="/api/categories" method="POST">
            <div class="col-6 mb-3 ">
              <label for="name" class="form-label">Category Name</label>
              <input type="text" class="form-control" name="name" id="name" value="test1" placeholder="" required>
            </div>

            <div
              class="col-4 mb-3 subcategory-input-container d-flex align-items-center justify-content-center gap-2 hidden">

              <button type="button" class="btn btn-outline-danger delete-subcategory mr-3">
                X
              </button>
              <div>
                <label for="subcategory-name" class="form-label">Sub Category Name</label>
                <input type="text" class="form-control" name="subcategory-name" value="test1" placeholder="" required>
              </div>

            </div>

            <div class="d-flex align-items-center justify-content-center form-btns-container">
              <button type="button" class="btn btn-outline-primary mx-auto add-subcategory-btn">
                Add Sub Category
              </button>
              <button type="submit" class="btn btn-primary mx-auto">
                Add & Save Category
              </button>
            </div>
          </form>
          <div class="feedback-message container text-center mt-4 hidden fs-3"></div>
        </div>
      </div>
    </div>


  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <script src="/js/dashboard/categories.js"></script>
</body>

</html>