<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" />

  <link rel="stylesheet" href="frontend/main.css">
  <link rel="stylesheet" href="frontend/home/home.css">
  <title>KickPulse Homepage</title>
</head>

<body class="mb-5">
  <%- include('./components/preloader') %>

  <%- include('./components/search-modal') %>


  <div class="content">
    <%- include('./components/header') %>

    <section class="container-fluid video-container mb-3 p-0"><video width="100%" height="100%" autoplay loop muted>
        <source src="../photos/video_entrence.mov" type="video/mp4">
      </video>
    </section>
    <main class="container-fluid mb-5">

      <%- include('./components/carousel') %>

      <section class="container mb-5">
        <div class="text-center w-50 mx-auto">
          <h4 class="mb-3">Just Dropped</h4>
          <div class="gender-links d-flex justify-content-between mb-4 fs-5">
            <a href="#"
              class="gender-link link-secondary link-body-emphasis link-offset-2 link-underline-opacity-25 link-underline-opacity-75-hover active"
              data-gender="men">Men</a>
            <a href="#"
              class="gender-link link-secondary link-body-emphasis link-offset-2 link-underline-opacity-25 link-underline-opacity-75-hover"
              data-gender="women">Women</a>
            <a href="#"
              class="gender-link link-secondary link-body-emphasis link-offset-2 link-underline-opacity-25 link-underline-opacity-75-hover"
              data-gender="kids">Kids</a>
          </div>
        </div>
        <div
          class="recent-products row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-4 g-3 justify-content-center">
          <% menProducts.splice(4); menProducts.forEach(product => { %>
          <div class="col product-card" data-product-id="<%= product._id %>">
            <div class="card h-100">
              <button type="button" class="btn nav-link p-0 border-0 h-100 d-flex flex-column align-items-center"
                data-bs-toggle="modal" data-bs-target="#quick-view-modal">
                <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
                <div class="card-body text-center p-2 d-flex flex-column mt-auto">
                  <h5 class="card-title flex-grow-1 d-flex align-items-center justify-content-center">
                    <%= product.name %></h5>
                  <strong class="d-block mt-2">Quick View</strong>
                </div>
              </button>
            </div>
          </div>
          <% }) %>
        </div>
      </section>

      <section class="container brands-showcase">
        <div class="text-center w-50 mx-auto">
          <h4 class="mb-5">Shop Brands</h4>
        </div>
        <div class="row g-4">
          <div class="col-12 col-md-6">
            <a href="/brand/converse" class="link-secondary text-decoration-none">
              <div class="card text-center h-120" style="overflow: hidden;">
                <img src="../photos/converse-branch.jpg" class="card-img-top" alt="..." style="width: 100%; height: auto; object-fit: cover;">
                <div class="card-body">
                  <strong>Shop Converse</strong>
                </div>
              </div>
            </a>
          </div>
          <div class="col-12 col-md-6">
            <a href="/brand/new%20balance" class="link-secondary text-decoration-none">
              <div class="card text-center h-120" style="overflow: hidden;">
                <img src="../photos/nb-branch.jpg" class="card-img-top" alt="..." style="width: 100%; height: auto; object-fit: cover;">
                <div class="card-body">
                  <strong>Shop New Balance</strong>
                </div>
              </div>
            </a>
          </div>
          <div class="col-12 col-md-6">
            <a href="/brand/nike" class="link-secondary text-decoration-none">
              <div class="card text-center h-120" style="overflow: hidden;">
                <img src="../photos/nike branch.jpg" class="card-img-top" alt="..." style="width: 100%; height: auto; object-fit: cover;">
                <div class="card-body">
                  <strong>Shop Nike</strong>
                </div>
              </div>
            </a>
          </div>
          <div class="col-12 col-md-6">
            <a href="/brand/adidas" class="link-secondary text-decoration-none">
              <div class="card text-center h-120" style="overflow: hidden;">
                <img src="../photos/adidas-branch.jpg" class="card-img-top" alt="..." style="width: 100%; height: auto; object-fit: cover;">
                <div class="card-body">
                  <strong>Shop Adidas</strong>
                </div>
              </div>
            </a>
          </div>
        </div>
      </section>



    </main>
    <%- include('./components/footer') %>
  </div>

  <!-- MODALS -->
  <%- include('./components/cart-modal') %>
  <%- include('./components/quickview-modal') %>
  <% if(!session.userId) { %>
  <%- include('./components/register-modal') %>
  <%- include('./components/login-modal') %>
  <% } %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <script type="module" src="frontend/home/home.js"></script>
</body>

</html>