<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" />

    <link rel="stylesheet" href="/frontend/main.css">
    <link rel="stylesheet" href="/frontend/category/category.css">
    <title>KickPulse <%= category.name %></title>
</head>

<body class="mb-5">
    <%- include('./components/preloader') %>

    <div class="content">

        <%- include('./components/header') %>

        <main class="container mb-5">
            <section class="mb-5 pt-3">
                <div class="text-center w-75 mx-auto">
                    <h4 class="mb-2"><%= category.name %></h4>
                </div>
                <% if(categoryProducts.length == 0) { %>
                <h3 class="text-center lead"><strong><%= category.name %></strong> category does not have any products
                    yet..</h3>
                <% } else { %>

                <h3 class="text-center lead mb-5">Explore our <strong><%= category.name.toLowerCase() %></strong>
                    collection</h3>
                <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-4 g-3">
                    <!-- Adjusted column sizes and gap -->
                    <% categoryProducts.forEach(product => { %>
                    <div class="col product-card" data-product-id="<%= product._id %>">
                        <div class="card h-100">
                            <button type="button"
                                class="btn nav-link p-0 border-0 h-100 d-flex flex-column align-items-center"
                                data-bs-toggle="modal" data-bs-target="#quick-view-modal">
                                <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
                                <div class="card-body text-center p-2 d-flex flex-column mt-auto">
                                    <h5 class="card-title flex-grow-1 d-flex align-items-center justify-content-center">
                                        <%= product.name %></h5>
                                    <strong class="d-block mt-2">Quick View</strong>
                                </div>
                            </button>
                        </div>
                    </div>
                    <% }) %>
                    <% } %>

                </div>

            </section>
        </main>

        <%- include('./components/footer') %>

    </div>


    <!-- MODALS -->
    <%- include('./components/cart-modal') %>
    <%- include('./components/quickview-modal') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script type="module" src="/frontend/category/category.js"></script>
    <script type="module" src="/frontend/main.js"></script>

</body>

</html>