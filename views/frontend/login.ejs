<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" />

    <link rel="stylesheet" href="/frontend/main.css">
    <link rel="stylesheet" href="/frontend/login/login.css">
    <title>KickPulse Login</title>
</head>

<body class="mb-5">
    <%- include('./components/preloader') %>
    <%- include('./components/search-modal') %>

    <div class="content">
        <%- include('./components/header') %>

        <main class="container-fluid mb-5 d-flex align-items-center justify-content-center">
            <div class="row justify-content-center align-items-center vh-75 pt-3">
                <!-- Login Form -->
                <div class="form-signin mx-auto">
                    <div class="rounded-4 shadow">
                        <div class="p-5 pb-4 border-bottom-0">
                            <h1 class="fw-bold mb-0 fs-2">Sign in</h1>
                        </div>
                        <div class="p-5 pt-0">
                            <div class="container">
                                <form action="/login" method="POST" class="needs-validation" novalidate>
                                    <div class="form-floating mb-3">
                                        <input type="email" class="form-control rounded-3" id="loginEmailInput"
                                            name="email" placeholder="name@example.com" required>
                                        <label for="loginEmailInput">Email address</label>
                                        <div class="invalid-feedback">
                                            Please enter a valid email address.
                                        </div>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input type="password" class="form-control rounded-3" id="loginPasswordInput"
                                            name="password" placeholder="Password" required>
                                        <label for="loginPasswordInput">Password</label>
                                        <div class="invalid-feedback">
                                            Please enter your password.
                                        </div>
                                    </div>
                                    <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary"
                                        type="submit">Login</button>
                                    <hr class="my-4">
                                    <h2 class="fs-5 fw-bold mb-3">Don't have an account?</h2>
                                    <a href="/register"
                                        class="w-100 py-2 mb-2 btn btn-outline-secondary rounded-3 switch-to-signup"
                                        type="button">
                                        Sign up here
                                    </a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </main>

        <%- include('./components/footer') %>

    </div>


    <!-- MODALS -->
    <%- include('./components/cart-modal') %>
    <%- include('./components/quickview-modal') %>
    <% if(!session.userId) { %>
    <%- include('./components/register-modal') %>
    <%- include('./components/login-modal') %>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script type="module" src="/frontend/login/login.js"></script>
</body>

</html>